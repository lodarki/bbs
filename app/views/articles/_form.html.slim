= form_for @article, url: topic_article_path(@article.topic, @article) do |f|
  =f.hidden_field :topic_id
  p
    =f.label :title
    =f.text_field :title
  p
    =f.label :Content
    =f.text_area :detail, style: "width: 500px; height: 500px;"
  p
    =f.label :permission
    =f.text_field :permission
  p
    =f.submit
