doctype html
html lang="en"
  head
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = stylesheet_link_tag "application", "data-turbolinks-track" => true
    script src="http://js.nicedit.com/nicEdit-latest.js" type="text/javascript"
    javascript bkLib.onDomLoaded(nicEditors.allTextAreas);
    = csrf_meta_tag
  body.environment data-offset="50" data-controller-name="#{controller_name}"
    .top-container
      ul#top-links
        li = link_to "Home", home_index_path
      ul#user-links
        = render 'common/user_nav'
  	.container
      = yield